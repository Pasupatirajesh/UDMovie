<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_poster_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_toRightOf="@+id/iv_poster_view"
        android:layout_toEndOf="@+id/iv_poster_view"/>

    <ImageView
        android:id="@+id/iv_poster_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/tv_movie_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_avg_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_synopsis_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/iv_poster_view"
        android:layout_toEndOf="@+id/iv_poster_view"/>

    <TextView
        android:id="@+id/tv_synopsis_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/iv_poster_view"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bv_trailer"
        android:text="Trailer"
        android:layout_below="@id/tv_synopsis_view"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/add_to_fav_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_fav_button"
        android:layout_below="@+id/tv_release_date"
        android:layout_toRightOf="@+id/iv_poster_view"
        android:layout_toEndOf="@+id/iv_poster_view"/>

    <TextView
        android:id="@+id/user_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/bv_trailer"
        />


</RelativeLayout>
</ScrollView>
