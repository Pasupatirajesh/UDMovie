<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:text="Hi"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_fav_poster_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tv_fav_title_text_view"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/thalapthi"
        android:id="@+id/iv_fav_poster_view"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="71dp"
        app:layout_constraintHorizontal_bias="0.507"/>

    <TextView
        android:id="@+id/tv_fav_synopsis_view"
        android:layout_width="299dp"
        android:layout_height="237dp"
        android:text="TextView"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_fav_poster_view"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_fav_poster_view"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/iv_fav_poster_view"/>

</android.support.constraint.ConstraintLayout>